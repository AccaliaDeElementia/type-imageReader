        li.nav-item
          a.nav-link#bookmarks-tab(data-toggle="tab" href="#bookmarks" role="tab") Bookmarks
    div.menu-block
      div.tab-content
        mixin actionSection
          - 
            const actionRows = [
              [
                {
                  name: 'First',
                  image: 'skip_previous'
                }, {
                  name: 'Previous Image',
                  image: 'fast_rewind'
                }, {
                  name: 'Random',
                  image: 'shuffle'
                }, {
                  name: 'Bookmark',
                  image: 'bookmarks'
                }, {
                  name: 'Next Image',
                  image: 'fast_forward'
                }, {
                  name: 'Last',
                  image: 'skip_next'
                }
              ], [
                {
                  name: 'Previous Folder',
                  image: 'first_page'
                }, {
                  name: 'Previous Unseen',
                  image: 'chevron_left'
                }, {
                  name: 'View Full Size',
                  image: 'open_in_new'
                }, {
                  name: 'Next Unseen',
                  image: 'chevron_right'
                }, {
                  name: 'Next Folder',
                  image: 'last_page'
                }
              ], [
                {
                  name: 'Mark All Seen',
                  image: 'check_box'
                }, {
                  name: 'Fullscreen',
                  image: 'fullscreen'
                }, {
                  name: 'Parent Folder',
                  image: 'folder'
                }, {
                  name: 'Slideshow',
                  image: 'slideshow'
                }, {
                  name: 'Mark All Unseen',
                  image: 'check_box_outline_blank'
                }
              ]
            ]
          each actionRow in actionRows
            div.actions 
              each action in actionRow
                div.card.action-button(data-action=`${action.name.replace(/\s+/g, '').split('').map((o, i)=> i === 0 ? o.toLowerCase() : o).join('')}`)
                  div.card-top
                    i.material-icons= action.image
                  div.card-body
                    h5= action.name
        
        div.tab-pane.action-block#actions(role="tabpanel")
          +actionSection
        div.tab-pane.action-block#navigation(role="tabpanel")
          +actionSection
          div#folders
            if data.children.length > 0
              h3 Folders
              mixin folderCard(folder)
                div(class=`card ${folder.totalSeen === folder.totalCount ? 'complete' : ''}`)
                  - const navLink = `/show${folder.path}`
                  a(href=navLink)
                    if folder.cover
                      img.card-image(src=`/images/preview${folder.cover}` alt=folder.name)
                    else
                      div.card-image
                        i.material-icons folder
                  div.card-body
                    - const text = `${folder.totalSeen.toLocaleString()}/${folder.totalCount.toLocaleString()}`
                    - const percent = folder.totalSeen / folder.totalCount * 100
                    h5.card-title
                      a(href=navLink)= folder.name
                    div.progress
                      div.text= text
                      div.slider(style=`width: ${percent}%` aria-valuenow=`${percent}` aria-valuemin="0" aria-valuemax="100")
              if data.children.filter(c => c.totalSeen < c.totalCount).length > 0
                h4 
                  i.material-icons folder
                  span Incomplete
                div.flex-cards
                  each folder in data.children.filter(c => c.totalSeen < c.totalCount)
                    +folderCard(folder)
              if data.children.filter(c => c.totalSeen === c.totalCount).length > 0
                h4
                  i.material-icons folder
                  span Complete
                div.flex-cards
                  each folder in data.children.filter(c => c.totalSeen === c.totalCount)
                    +folderCard(folder)
        div.tab-pane.active.action-block#pictures(role="tabpanel")
          +actionSection
          h3 Pictures
          div.paginated
            if data.pictures.totalPages > 1
              nav.page-nav#pictures-nav(aria-label='Pictures' data-pagesize=data.pictures.pageSize data-pages=data.pictures.totalPages)
                ul.pagination
                  li.page-item(data-page='prev')
                    a.page-link(href='#' aria-label='Previous')
                      span(aria-hidden='true') &laquo;
                  each _, i in data.pictures.pages
                    li.page-item(data-page=(i + 1))
                      a.page-link(href='#')= (i + 1)
                  li.page-item(data-page='next')
                    a.page-link(href='#' aria-label='Next')
                      span(aria-hidden='true') &raquo;
            each pictures, page in data.pictures.pages
              div.page.flex-cards(data-page=(page + 1) style="display: none;")
                each picture in pictures
                  div(class=`card picture ${picture.seen ? 'seen' : ''}` data-index=picture.index)
                    img.card-image(data-src=`/images/preview${picture.path}` alt=picture.name)
                    div.card-body
                      h5.card-title
                        span 
                          i.material-icons photo
                        span= picture.name
        div.tab-pane.action-block#bookmarks(role="tabpanel")
          +actionSection
          mixin bookmarkCard(mark)
            div(class='card d-inline-block m-2 bookmark', data-path=mark.path, data-folder=mark.folder)
              img.card-img-top(src=`/images/preview${mark.path}` alt=mark.name)
              div.card-body
                h5.card-title
                  div
                    span 
                      i.material-icons photo
                    span= mark.name
                  div
                    button(type='button', class='btn btn-danger remove', data-path=mark.path) Remove

          h3 Bookmarks
            h4 Current
              div.d-fled.flex-wrap.justify-content-center.w-100
              each mark in bookmarks.current
                +bookmarkCard(mark)
            h4 Children
              each folder in bookmarks.children
                h5= folder.folder
                  div.d-fled.flex-wrap.justify-content-center.w-100
                    each mark in folder.marks
                      +bookmarkCard(mark)
            h4 Others
              each folder in bookmarks.others
                h5= folder.folder
                  div.d-fled.flex-wrap.justify-content-center.w-100
                    each mark in folder.marks
                      +bookmarkCard(mark)
