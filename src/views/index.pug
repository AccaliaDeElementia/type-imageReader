block content
  script.
    let picturereaderdata = !{JSON.stringify(data)}
  div.container-fluid#mainImage
    img
  div.container.bg-dark#mainMenu
    div
      ul.nav.nav-tabs(role="tablist")
        li.nav-item
          a.nav-link#navigation-tab(data-toggle="tab" href="#actions" role="tab") Actions
        li.nav-item
          a.nav-link#navigation-tab(data-toggle="tab" href="#navigation" role="tab") Folders
        li.nav-item.active
