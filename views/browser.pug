doctype html
html
  head
    meta(name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=8.0,width=device-width,user-scalable=yes")
    title Comic Reader
    link(rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png")
    link(rel='stylesheet', href='/stylesheets/bundle.css')
  body
    nav#navbar
      h1
        a.navbar-brand(href='/') Comic Reader
      div.expando
      div.selectUnreadAll
        div
          span.all Show All
          span.unread Show Unread
      div(style="display:inline-block;width: 0.5rem;")
      div.menuButton
        i.material-icons menu
    div#bigImage
      img.hidden
    div#mainMenu.hidden
      div
        div.tab-list
          ul
            li
              a(href="#tabActions") Actions
            li
              a(href="#tabFolders") Folders
            li.active
              a(href="#tabImages") Images
            li
              a(href="#tabBookmarks") Bookmarks
        div.tab-content
          div#tabActions
          div#tabFolders
          div#tabImages
          div#tabBookmarks Bookmarks
    div#screenText
      div.statusBar.top
        div.left
        div.center
        div.right
      div.statusBar.bottom
        div.left
        div.center
        div.right
    div#loadingScreen
      div.centerblock
        div 
