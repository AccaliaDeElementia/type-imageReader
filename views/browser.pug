        h4 LOADING...
    template#ActionCard
      div.card.action-button
        div.card-top
          i.material-icons question_mark
        div.card-body
          h5 placeholder
    template#FolderCard
      div.card
        div.card-top
          i.material-icons folder
        div.card-body
          h5 placeholder
        div.progress
          div.text placeholder%
          div.slider(style="width: 0")
    template#ImageCard
      div.card
        div.card-body
          h5 placeholder
    template#BookmarkFolder 
      details.folder
        summary.title placeholder
        div
    template#BookmarkCard
      div.card
        div.card-body
          h5.title placeholder
        button Remove
    template#Paginator
      nav.pages
        ul.pagination
    template#PaginatorItem
      li.page-item
        a.page-link(href='#')
          span(aria-hidden='true') 
    script(src='/bundles/browser.js' type='text/javascript' defer='defer')
